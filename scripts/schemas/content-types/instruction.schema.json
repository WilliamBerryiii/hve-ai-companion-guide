{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hve-ai-companion-guide/schemas/content-types/instruction.schema.json",
  "title": "Instruction File Frontmatter",
  "description": "Frontmatter schema for GitHub Copilot instruction files (**/*.instructions.md)",
  "type": "object",
  "properties": {
    "applyTo": {
      "type": "array",
      "description": "Glob patterns defining where this instruction file applies",
      "items": {
        "type": "string",
        "pattern": "^.+$"
      },
      "uniqueItems": true,
      "examples": [["docs/**/*.md", "!docs/**/*.instructions.md"]]
    }
  },
  "required": [],
  "additionalProperties": true,
  "examples": [
    {
      "applyTo": ["docs/**/*.md", "!docs/**/*.instructions.md", "!docs/**/*.prompt.md"]
    }
  ]
}
