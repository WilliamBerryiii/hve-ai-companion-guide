{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hve-ai-companion-guide/schemas/content-types/section-introduction.schema.json",
  "title": "Section Introduction Frontmatter",
  "description": "Frontmatter schema for section introduction pages (about.md)",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Section title",
      "minLength": 1,
      "maxLength": 200,
      "examples": ["Chat Modes Overview"]
    },
    "description": {
      "type": "string",
      "description": "One-sentence summary describing section purpose",
      "minLength": 10,
      "maxLength": 500,
      "examples": ["Explore specialized GitHub Copilot modes for different development workflows"]
    },
    "author": {
      "type": "string",
      "description": "Document author",
      "default": "HVE Core Team",
      "minLength": 2
    },
    "date": {
      "type": "string",
      "description": "Last modified date in ISO 8601 format (YYYY-MM-DD)",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "examples": ["2025-11-16"]
    },
    "keywords": {
      "type": "array",
      "description": "Keywords for search optimization (3-8 recommended)",
      "items": {
        "type": "string",
        "minLength": 2
      },
      "uniqueItems": true,
      "minItems": 3,
      "maxItems": 8,
      "examples": [["chat modes", "copilot", "workflows", "development modes"]]
    }
  },
  "required": ["title", "description", "author", "date", "keywords"],
  "additionalProperties": false,
  "examples": [
    {
      "title": "Chat Modes Overview",
      "description": "Explore specialized GitHub Copilot modes for different development workflows",
      "author": "HVE Core Team",
      "date": "2025-11-16",
      "keywords": [
        "chat modes",
        "copilot",
        "workflows",
        "development modes"
      ]
    }
  ]
}
