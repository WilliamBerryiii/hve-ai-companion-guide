{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://hve-ai-companion-guide/schemas/content-types/workflow-guide.schema.json",
  "title": "Workflow Guide Frontmatter",
  "description": "Frontmatter schema for step-by-step workflow guides (docs/workflows/*.md)",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "title": {
          "$ref": "../definitions/common-fields.json#/definitions/title",
          "pattern": "^.+ Workflow$",
          "description": "Workflow title ending with ' Workflow'"
        },
        "description": {
          "$ref": "../definitions/common-fields.json#/definitions/description"
        },
        "author": {
          "$ref": "../definitions/common-fields.json#/definitions/author"
        },
        "date": {
          "$ref": "../definitions/common-fields.json#/definitions/date_iso8601"
        },
        "keywords": {
          "$ref": "../definitions/common-fields.json#/definitions/keywords"
        }
      },
      "required": ["title", "description", "author", "date", "keywords"]
    }
  ],
  "additionalProperties": false,
  "examples": [
    {
      "title": "Merge Conflict Resolution Workflow",
      "description": "Systematic conflict resolution using Core RPI pattern for evidence-based merging",
      "author": "HVE Core Team",
      "date": "2025-11-16",
      "keywords": [
        "merge conflicts",
        "Core RPI",
        "code quality",
        "conflict resolution"
      ]
    }
  ]
}
